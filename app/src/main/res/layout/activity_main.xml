<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button android:text="Q" style="@style/KeyboardButton" />
        <Button android:text="W" style="@style/KeyboardButton" />
        <Button android:text="E" style="@style/KeyboardButton" />
        <Button android:text="R" style="@style/KeyboardButton" />
        <Button android:text="T" style="@style/KeyboardButton" />
        <Button android:text="Y" style="@style/KeyboardButton" />
        <Button android:text="U" style="@style/KeyboardButton" />
        <Button android:text="I" style="@style/KeyboardButton" />
        <Button android:text="O" style="@style/KeyboardButton" />
        <Button android:text="P" style="@style/KeyboardButton" />
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button android:text="A" style="@style/KeyboardButton" />
        <Button android:text="S" style="@style/KeyboardButton" />
        <Button android:text="D" style="@style/KeyboardButton" />
        <Button android:text="F" style="@style/KeyboardButton" />
        <Button android:text="G" style="@style/KeyboardButton" />
        <Button android:text="H" style="@style/KeyboardButton" />
        <Button android:text="J" style="@style/KeyboardButton" />
        <Button android:text="K" style="@style/KeyboardButton" />
        <Button android:text="L" style="@style/KeyboardButton" />
    </LinearLayout>

    <!-- Third Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            style="@style/KeyboardButton"
            android:layout_width="56dp"
            android:text="ENTER" />

        <Button android:text="Z" style="@style/KeyboardButton" />
        <Button android:text="X" style="@style/KeyboardButton" />
        <Button android:text="C" style="@style/KeyboardButton" />
        <Button android:text="V" style="@style/KeyboardButton" />
        <Button android:text="B" style="@style/KeyboardButton" />
        <Button android:text="N" style="@style/KeyboardButton" />
        <Button android:text="M" style="@style/KeyboardButton" />
        <Button android:text="âŒ«" style="@style/KeyboardButton" />
    </LinearLayout>
</LinearLayout>
